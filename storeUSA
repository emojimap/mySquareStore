$itemInfo = explode(":", $itemDesc);

echo "<div class='column'>\r\n<div class='card'>\r\n<a href='item?q=" . $name . "'>\r\n<img src='items/" . $img . "' alt='item' style='width:200px; height:200px;'>\r\n<div class='container'>\r\n<h2>" . $itemInfo[0] . "</h2>\r\n<p class='title'><br>" . $itemInfo[1] . "</p>\r\n<p>" . $itemInfo[2] . "</p>\r\n</div>\r\n</div>\r\n</a>\r\n</div>\r\n\r\n";

